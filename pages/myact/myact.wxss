/* pages/myact/myact.wxss */
.navbar{overflow:hidden;position:fixed;z-index:999;width:750rpx;background-color:#fff;}
.navbar .inner{display:flex;border-bottom:2rpx solid #f1f1f1;height:88rpx;}
.navbar .inner view:nth-child(2){border-left: 1rpx solid #cccccc;border-right: 1rpx solid #cccccc;}
.navbar .inner .nav{flex:1;height:84rpx;text-align:center;}
.navbar .inner .nav.active{border-bottom:6rpx solid #f39800;background-color:#f5f5f5;}
.navbar .inner .nav text{display:inline-block;height:84rpx;line-height:86rpx;}
.navbar .inner .nav.active text{font-size:32rpx;font-weight:600;}

.box{padding-top: 90rpx;}
.item{margin-top: 30rpx;background-color: white;display: flex;padding: 20rpx 30rpx;align-items: center;}
.item view{flex: 1;padding-left: 20rpx;display: flex;flex-direction: column;}
.item view text{font-size: 28rpx;color: #aaaaaa;}
.item view text:nth-child(1){font-size: 36rpx;font-weight: bold;color: black;}
.item image:nth-child(1){width: 140rpx;height: 140rpx;border-radius: 20rpx;}
.item image:nth-child(3){width: 50rpx;height: 50rpx;}